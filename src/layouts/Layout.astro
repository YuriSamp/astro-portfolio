---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <meta
      name='description'
      content='The portfolio that combines neo-brutalism with minimalism'
    />
    <link
      href='https://api.fontshare.com/v2/css?f[]=satoshi@900,700,500&display=swap'
      rel='stylesheet'
    />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Merriweather&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>
</html>
<body
  class='bg-[#f9f5f2] scrollbar-thin scrollbar-track-transparent scrollbar-thumb-black scrollbar-thumb-rounded-full'
>
  <slot />
</body>

<style is:global>
  html {
    @apply font-serif;
    list-style: none;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-sans font-black;
  }
</style>
